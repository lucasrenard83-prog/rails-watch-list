<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">Mes listes</h1>
    <%= link_to new_list_path, class: "btn btn-primary px-4" do %>
      <i class="fa-solid fa-plus me-1"></i> Nouvelle liste
    <% end %>
  </div>
  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-sm p-4 h-100 position-relative">
          <h3 class="fw-semibold mb-2">
            <%= link_to list.name, list, class: "text-decoration-none" %>
          </h3>
          <p class="text-muted mb-3">
            <i class="fa-solid fa-film me-1"></i>
            <%= list.bookmarks.count %> films
          </p>
          <div class="d-flex justify-content-between align-items-center mt-auto">
            <%= link_to list, class: "btn btn-outline-primary btn-sm" do %>
              <i class="fa-solid fa-eye me-1"></i> Voir
            <% end %>
            <%= link_to list_path(list),
                data: { turbo_method: :delete, turbo_confirm: "Supprimer cette liste ?" },
                class: "btn btn-outline-danger btn-sm d-flex align-items-center gap-1" do %>
              <i class="fa-solid fa-trash"></i>
              Supprimer
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
