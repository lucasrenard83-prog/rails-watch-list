<div class= "container mt-4">
<h1> @list.name </h1>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-success mb-4" %>

<h2> Bookmark </h2>
<%=  @list.bookmarks.each do |bookmark| %>
<div class="card mb-3 p-3 shadow-sm">
  <h3><%= bookmark.movie.title %></h3>
   <p><%= bookmark.comment %></p>
   <%= link_to "Delete",
                bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Delete this bookmark?"},
                class: "btn btn-danger mt-2" %>
  </div>
<% end %>

<%= link_to "retour", lists_path, class: "btn btn-secondary mt-4" %>
</div>
