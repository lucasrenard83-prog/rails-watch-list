<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><%= @list.name %></h1>
    <%= link_to new_list_bookmark_path(@list), class: "btn btn-success px-4" do %>
      <i class="fa-solid fa-plus me-1"></i> Ajouter un signet
    <% end %>
  </div>
  <h2 class="fw-semibold mb-3">Signets</h2>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card shadow-sm p-4 mb-4">
      <div class="row align-items-center">
        <div class="col-12 col-md-3 mb-3 mb-md-0">
          <img src="<%= bookmark.movie.poster_url %>"
               alt="Movie"
               class="img-fluid rounded shadow-sm">
        </div>
        <div class="col-12 col-md-7">
          <h3 class="mb-2 fw-bold"><%= bookmark.movie.title %></h3>
          <p class="text-muted mb-0"><%= bookmark.comment %></p>
        </div>
        <div class="col-12 col-md-2 d-flex justify-content-md-end justify-content-start mt-3 mt-md-0">
          <%= link_to bookmark_path(bookmark),
                      data: { turbo_method: :delete, turbo_confirm: "Supprimer ce signet ?" },
                      class: "btn btn-outline-danger btn-sm d-flex align-items-center gap-2" do %>
            <i class="fa-solid fa-trash"></i> Supprimer
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to lists_path, class: "btn btn-secondary mt-4 px-3" do %>
    <i class="fa-solid fa-arrow-left me-1"></i> Retour
  <% end %>
</div>
