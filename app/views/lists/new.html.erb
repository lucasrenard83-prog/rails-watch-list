<div class="container mt-4" style="max-width: 600px;">
  <h1 class="fw-bold mb-4">Créer une nouvelle liste</h1>
  <div class="card p-4 shadow-sm">
    <%= simple_form_for @list, html: { multipart: true } do |f| %>
      <%= f.input :name, label: "Nom de la liste" %>
      <%= f.input :photo,
                  as: :file,
                  label: "Photo de la liste",
                  input_html: { class: "form-control" } %>
      <%= f.submit "Créer la liste", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>
  <%= link_to "Retour", lists_path, class: "btn btn-secondary mt-3" %>
</div>
