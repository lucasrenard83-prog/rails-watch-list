<div class="container mt-4">
<h1> Add a bookmark </h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
<%= f.input :comment %>
<%= f.association :movie, prompt: "Choose a movie" %>
<%= f.submit "Create a bookmark", class: "btn btn-primary mt-3" %>
<% end %>
<%= link_to "Back", @list, class: "btn btn-secondary mt-3" %>
</div>
